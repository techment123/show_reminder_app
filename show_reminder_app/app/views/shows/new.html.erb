<h1>Add a New Show</h1>

<div>
<%= form_for :show, url: shows_path do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@show.errors.count, "error") %> prohibited
        this channel from being saved:
      </h2>
      <ul>
        <% @show.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label "Enter Name:" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "Favorite:" %><br>
    <%= f.check_box :favorite %>
  </p>

  <div>
    <%= f.label "Select Channel" %><br/>
    <%= f.select :channel_id, options_for_select( @channels.collect { |channel| [channel.title, channel.id] } ), {}, { class: 'form-control' } %>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
<div>
  <%= link_to 'Back to home page', welcome_index_path %>
</div>
