<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search] %>
    <%= button_tag "Search",:name => nil%>
  </div>
<% end %>

<h3>Search Result:</h3>
<br/>

<% @results.each do |result| %>
  <div>
    <strong>Show Name is: </strong> <%= result.title %>
    <strong>Favorite: </strong> <%= result.favorite %>
    <strong>Associated With: </strong> <%= result.channel.title %>
  </div>
<% end %>

<br/>
<br/>

<%= link_to 'See All shows', shows_path %><br/>
