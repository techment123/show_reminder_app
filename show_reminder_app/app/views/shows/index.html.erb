<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search] %>
    <%= button_tag "Search",:name => nil%>
  </div>
<% end %>


<h1>All Shows: </h1>
<% @shows.each do |show| %>
  <div>
    <strong>Show Name is: </strong> <%= show.title %>
    <strong>Favorite: </strong> <%= show.favorite %>
    <strong>Associated With: </strong> <%= show.channel.title %>
  </div>
<% end %>
<br/>
<br/>
<div>
  <%= link_to 'Add New Show', new_show_path %><br/>
  <%= link_to 'Back to home page', welcome_index_path %>
</div>
